<%= turbo_frame_tag "favorite_button_#{fixture_id}" do %>
  <% if current_user.favorited?(fixture_id) %>
    <%= button_to favorites_path(fixture_id: fixture_id), method: :delete, class: "text-yellow-500 hover:text-yellow-600 transition", title: "お気に入りから削除" do %>
      <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
        <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
      </svg>
    <% end %>
  <% else %>
    <%= button_to favorites_path(fixture_id: fixture_id), method: :post, class: "text-gray-400 hover:text-yellow-500 transition", title: "お気に入りに追加" do %>
      <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
        <path d="M22 9.24l-7.19-.62L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21 12 17.27 18.18 21l-1.63-7.03L22 9.24zM12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28L12 15.4z"/>
      </svg>
    <% end %>
  <% end %>
<% end %>
