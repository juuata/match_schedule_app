<h1 class="text-3xl font-bold mb-8">検索</h1>

<%# キーワード検索 %>
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <h2 class="text-lg font-bold mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
    キーワードで検索
  </h2>
  <%= form_with url: search_path, method: :get, class: "flex gap-4" do |f| %>
    <%= f.text_field :q, value: @query, placeholder: "リーグ名やチーム名を入力...", class: "flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
    <%= f.submit "検索", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 cursor-pointer" %>
  <% end %>
</div>

<%# リーグ・チーム選択検索 %>
<div class="bg-white rounded-lg shadow p-6 mb-8" data-controller="league-team-search">
  <h2 class="text-lg font-bold mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
    </svg>
    リーグ・チームから検索
  </h2>
  <%= form_with url: search_path, method: :get, class: "space-y-4", data: { league_team_search_target: "form" } do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :league_id, "リーグを選択", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :league_id,
                     options_for_select(
                       @all_leagues.map { |l| ["#{l[:name_ja]} (#{l[:name]})", l[:id]] },
                       @selected_league_id
                     ),
                     { prompt: "リーグを選択してください" },
                     class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white",
                     data: { league_team_search_target: "leagueSelect", action: "change->league-team-search#loadTeams" } %>
      </div>
      <div>
        <%= f.label :team_id, "チームを選択", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :team_id,
                     options_for_select(
                       @league_teams.map { |t| ["#{t[:name_ja]} (#{t[:name]})", t[:id]] },
                       @selected_team_id
                     ),
                     { prompt: "先にリーグを選択してください" },
                     class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white",
                     data: { league_team_search_target: "teamSelect" },
                     disabled: @league_teams.empty? %>
      </div>
    </div>
    <div class="flex justify-end">
      <%= f.submit "このチームを検索", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>

<%# 選択したチームの結果表示 %>
<% if @selected_team && @selected_league %>
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4">選択したチーム</h2>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center mb-4">
        <img src="<%= @selected_team[:logo] %>" alt="<%= @selected_team[:name] %>" class="w-16 h-16 mr-4">
        <div>
          <h3 class="text-xl font-bold"><%= @selected_team[:name_ja] || @selected_team[:name] %></h3>
          <p class="text-gray-500"><%= @selected_team[:name] %></p>
          <p class="text-sm text-gray-400"><%= @selected_league[:name_ja] || @selected_league[:name] %></p>
        </div>
      </div>
      <div class="flex gap-4">
        <%= link_to "所属リーグの試合日程", schedule_matches_path(league_id: @selected_league[:id]), class: "bg-green-600 text-white text-center py-2 px-4 rounded hover:bg-green-700" %>
        <%= link_to "所属リーグの試合結果", results_matches_path(league_id: @selected_league[:id]), class: "bg-blue-600 text-white text-center py-2 px-4 rounded hover:bg-blue-700" %>
        <%= link_to "所属リーグの順位表", standings_matches_path(league_id: @selected_league[:id]), class: "bg-gray-600 text-white text-center py-2 px-4 rounded hover:bg-gray-700" %>
      </div>
    </div>
  </div>
<% end %>

<% if @query.present? %>
  <p class="text-gray-600 mb-6">「<span class="font-bold"><%= @query %></span>」の検索結果</p>

  <% if @leagues.empty? && @teams.empty? %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <p class="text-gray-500 text-lg">検索結果が見つかりませんでした。</p>
      <p class="text-gray-400 mt-2">別のキーワードで検索してみてください。</p>
    </div>
  <% else %>
    <% if @leagues.any? %>
      <div class="mb-8">
        <h2 class="text-xl font-bold mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          リーグ (<%= @leagues.size %>件)
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <% @leagues.each do |league| %>
            <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-4">
              <div class="flex items-center mb-3">
                <img src="<%= league[:logo] %>" alt="<%= league[:name] %>" class="w-12 h-12 mr-3">
                <div>
                  <h3 class="font-bold"><%= league[:name_ja] || league[:name] %></h3>
                  <p class="text-xs text-gray-400"><%= league[:name] %></p>
                  <p class="text-sm text-gray-500"><%= league[:country_ja] || league[:country] %></p>
                </div>
              </div>
              <div class="flex flex-col space-y-2">
                <%= link_to "試合日程", schedule_matches_path(league_id: league[:id]), class: "bg-green-600 text-white text-center py-1 rounded text-sm hover:bg-green-700" %>
                <%= link_to "試合結果", results_matches_path(league_id: league[:id]), class: "bg-blue-600 text-white text-center py-1 rounded text-sm hover:bg-blue-700" %>
                <%= link_to "順位表", standings_matches_path(league_id: league[:id]), class: "bg-gray-600 text-white text-center py-1 rounded text-sm hover:bg-gray-700" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @teams.any? %>
      <div>
        <h2 class="text-xl font-bold mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          チーム (<%= @teams.size %>件)
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <% @teams.each do |team| %>
            <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-4">
              <div class="flex items-center mb-3">
                <img src="<%= team[:logo] %>" alt="<%= team[:name] %>" class="w-12 h-12 mr-3">
                <div>
                  <h3 class="font-bold"><%= team[:name_ja] || team[:name] %></h3>
                  <p class="text-xs text-gray-400"><%= team[:name] %></p>
                  <% if team[:league] %>
                    <p class="text-sm text-gray-500"><%= team[:league][:name_ja] || team[:league][:name] %></p>
                  <% end %>
                </div>
              </div>
              <% if team[:league] %>
                <div class="flex flex-col space-y-2">
                  <%= link_to "所属リーグの試合日程", schedule_matches_path(league_id: team[:league][:id]), class: "bg-green-600 text-white text-center py-1 rounded text-sm hover:bg-green-700" %>
                  <%= link_to "所属リーグの順位表", standings_matches_path(league_id: team[:league][:id]), class: "bg-gray-600 text-white text-center py-1 rounded text-sm hover:bg-gray-700" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<% unless @query.present? || @selected_team %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <p class="text-gray-500 text-lg">キーワード検索または、リーグ・チーム選択で検索してください。</p>
    <div class="mt-4 text-gray-400">
      <p>キーワード検索例: 「プレミア」「バルセロナ」「日本」「Premier」「Barcelona」</p>
    </div>
  </div>
<% end %>
