<h1 class="text-3xl font-bold mb-8"><%= @date %> の試合</h1>

<%= render "shared/league_selector",
    url: matches_path,
    selected_league: @league_id,
    show_date: true,
    date_value: @date %>

<% if @errors.present? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <p><%= @errors.is_a?(Hash) ? @errors.values.join(", ") : @errors.join(", ") %></p>
  </div>
<% end %>

<% if @matches.empty? %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <p class="text-gray-500 text-lg">この日の試合はありません。</p>
  </div>
<% else %>
  <% @matches.each do |match| %>
    <%= render "shared/match_card", match: match %>
  <% end %>
<% end %>
