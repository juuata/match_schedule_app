<h1 class="text-3xl font-bold mb-8">
  Live Matches
  <span class="inline-block w-3 h-3 bg-red-500 rounded-full animate-pulse ml-2"></span>
</h1>

<% if @errors.present? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <p><%= @errors.join(", ") %></p>
  </div>
<% end %>

<% if @matches.empty? %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <p class="text-gray-500 text-lg">No live matches at the moment.</p>
    <p class="text-gray-400 mt-2">Check back later or view the schedule for upcoming matches.</p>
    <%= link_to "View Schedule", schedule_matches_path, class: "inline-block mt-4 bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700" %>
  </div>
<% else %>
  <div class="mb-4 text-right">
    <p class="text-gray-500 text-sm">Auto-refresh is disabled. Reload page for updates.</p>
  </div>
  <% @matches.each do |match| %>
    <%= render "shared/match_card", match: match %>
  <% end %>
<% end %>
