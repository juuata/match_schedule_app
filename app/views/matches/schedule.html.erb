<h1 class="text-3xl font-bold mb-8">試合日程</h1>

<%= render "shared/league_selector",
    url: schedule_matches_path,
    selected_league: @league_id,
    show_date_range: true,
    from_value: @from_date,
    to_value: @to_date %>

<% if @errors.present? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
    <p><%= @errors.join(", ") %></p>
  </div>
<% end %>

<% if @matches.empty? %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <p class="text-gray-500 text-lg">この期間に予定されている試合はありません。</p>
  </div>
<% else %>
  <% @matches.sort.each do |date, matches| %>
    <div class="mb-8">
      <h2 class="text-xl font-bold mb-4 text-gray-700">
        <%= I18n.l(date, format: :long) %>
      </h2>
      <% matches.each do |match| %>
        <%= render "shared/match_card", match: match %>
      <% end %>
    </div>
  <% end %>
<% end %>
