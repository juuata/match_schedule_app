<div class="max-w-md mx-auto mt-8">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">ログイン</h1>

    <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
      <div class="w-48">
        <%= f.label :user_id, "ユーザーを選択", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :user_id,
                     options_from_collection_for_select(@users, :id, :name),
                     { prompt: "選択してください" },
                     class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
      </div>

      <div class="w-48">
        <%= f.submit "ログイン", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-gray-600">
        アカウントをお持ちでない方は
        <%= link_to "新規登録", signup_path, class: "text-green-600 hover:text-green-800 font-medium" %>
      </p>
    </div>
  </div>
</div>
