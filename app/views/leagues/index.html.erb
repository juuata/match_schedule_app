<h1 class="text-3xl font-bold mb-8">Leagues</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <% @leagues.each do |league| %>
    <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-6">
      <div class="text-center mb-4">
        <img src="<%= league[:logo] %>" alt="<%= league[:name] %>" class="w-20 h-20 mx-auto">
      </div>
      <h2 class="text-xl font-bold text-center mb-2"><%= league[:name] %></h2>
      <p class="text-gray-500 text-center mb-4"><%= league[:country] %></p>
      <div class="flex flex-col space-y-2">
        <%= link_to "Schedule", schedule_matches_path(league_id: league[:id]),
            class: "bg-green-600 text-white text-center py-2 rounded hover:bg-green-700" %>
        <%= link_to "Results", results_matches_path(league_id: league[:id]),
            class: "bg-blue-600 text-white text-center py-2 rounded hover:bg-blue-700" %>
        <%= link_to "Standings", standings_matches_path(league_id: league[:id]),
            class: "bg-gray-600 text-white text-center py-2 rounded hover:bg-gray-700" %>
      </div>
    </div>
  <% end %>
</div>
