<div class="max-w-md mx-auto mt-8">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">新規登録</h1>

    <% if @user.errors.any? %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6">
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "例: 田中太郎" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent", placeholder: "例: tanaka@example.com" %>
      </div>

      <div>
        <%= f.submit "新規登録", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-gray-600">
        すでにアカウントをお持ちの方は
        <%= link_to "ログイン", login_path, class: "text-green-600 hover:text-green-800 font-medium" %>
      </p>
    </div>
  </div>
</div>
